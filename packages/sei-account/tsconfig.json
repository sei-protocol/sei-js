{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "ES6",
    "rootDir": "./src",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}

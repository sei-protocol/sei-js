{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ES2020"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"useUnknownInCatchVariables": false,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"allowJs": true
	},
	"include": ["src"],
	"exclude": ["**/__snapshots__/**", "**/*.test.ts", "node_modules",
		"src/lib"
	]
}
